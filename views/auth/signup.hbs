<div id="form">
  <h2>Signup</h2>


  {{#if errorMessage}}
    <div class="error">
      <p>
        {{errorMessage}}
      </p>

      {{#each missingFields}}
        {{#if this}}
          Â· {{@key}} is missing<br />
        {{/if}}
      {{/each}}

      </div>
  {{/if}}


  <form action="/signup" method="POST">
    <label> Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

